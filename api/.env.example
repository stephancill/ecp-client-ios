# Environment variables for the ECP API server
# Copy this file to .env and fill in your actual values

# Database connection URL
DATABASE_URL="postgresql://postgres:password@localhost:5432/postgres"

# JWT secret for signing tokens (generate a secure random string)
JWT_SECRET=

# APNs (Apple Push Notifications) configuration
# Base64 encoded .p8 key file content
APNS_KEY=
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=

# Base RPC URL that supports eth_filterEvents
BASE_RPC_URL=

# Redis configuration for queues
REDIS_URL="redis://localhost:6379"
REDIS_QUEUE_URL="redis://localhost:6379"

# Optional: Redis for caching (if different from queue Redis)
# REDIS_CACHE_URL="redis://localhost:6379"
