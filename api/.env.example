# Environment variables for the ECP API server
# Copy this file to .env and fill in your actual values

# Database connection URL
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT secret for signing tokens (generate a secure random string)
JWT_SECRET="your_secure_jwt_secret_here"

# APNs (Apple Push Notifications) configuration
# Base64 encoded .p8 key file content
APNS_KEY="your_base64_encoded_p8_key_here"
APNS_KEY_ID="your_key_id_here"
APNS_TEAM_ID="your_team_id_here"
APNS_BUNDLE_ID="your.bundle.id"

# Base RPC URL that supports eth_filterEvents
BASE_RPC_URL="https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY"

# Redis configuration for queues
REDIS_URL="redis://localhost:6379"
REDIS_QUEUE_URL="redis://localhost:6379"

# Optional: Redis for caching (if different from queue Redis)
# REDIS_CACHE_URL="redis://localhost:6379"
